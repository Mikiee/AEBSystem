        </td>
        <td>
            @Html.DisplayFor(modelItem => item.License)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Initial)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Remarks)
